{
  "name": "zomzom-backend",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "prebuild": "prisma generate",
    "dev": "ts-node-dev --respawn src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "xray": "node scripts/xray-lite.js --out reports/backend",
    "migrate": "prisma migrate deploy",
    "migrate:deploy": "prisma migrate deploy",
    "generate": "prisma generate",
    "migrate:init": "node scripts/generate-initial-migration.js",
    "seed": "ts-node prisma/seed.ts",
    "seed:light": "ts-node -r dotenv/config prisma/seed.light.ts",
    "start:prod": "npm run build && node dist/server.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prisma:status": "prisma migrate status",
    "prisma:validate": "prisma validate",
    "doctor": "npm run prisma:validate && npm run prisma:status && npm run typecheck && npm run build"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^8.0.0",
    "@prisma/client": "^5.22.0",
    "archiver": "^6.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "formidable": "^3.5.0",
    "jsonwebtoken": "^9.0.2",
    "minisearch": "^6.1.0",
    "pino": "^8.17.1",
    "sharp": "^0.33.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/formidable": "^3.4.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.3"
  }
}
