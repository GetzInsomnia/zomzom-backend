{
  "name": "zomzom-backend",
  "version": "0.1.0",
  "scripts": {
    "dev": "ts-node-dev --respawn src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "prisma migrate deploy",
    "migrate:deploy": "prisma migrate deploy",
    "generate": "prisma generate",
    "migrate:init": "node scripts/generate-initial-migration.js",
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^8.0.0",
    "@prisma/client": "^5.15.0",
    "archiver": "^6.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "formidable": "^3.5.0",
    "jsonwebtoken": "^9.0.2",
    "minisearch": "^6.1.0",
    "pino": "^8.17.1",
    "sharp": "^0.33.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.12.7",
    "@types/formidable": "^3.4.5",
    "prisma": "^5.15.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.3"
  },
  "tsconfig": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ]
  },
  "detected": {
    "frontend": false,
    "backend": true
  }
}